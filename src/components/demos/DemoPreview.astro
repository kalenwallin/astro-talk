---
interface Props {
  title: string;
  link: string;
}

const { title, link } = Astro.props;
---

<a
  href={link}
  class="block w-72 rounded-lg bg-slate-800 p-6 text-white transition-all duration-300 ease-in-out hover:scale-105 hover:shadow-[0_0_15px_rgba(255,255,255,0.3)] text-center"
>
  <h2 class="mb-4 text-xl font-bold text-center">{title}</h2>
  <div class="inline-block rounded bg-blue-600 px-4 py-2 text-white">
    View Demo
  </div>
</a>
