---
import type { CollectionEntry } from 'astro:content';
import SlideLayout from './SlideLayout.astro';

interface Props {
	slide: CollectionEntry<'slides'>;
}

const { slide } = Astro.props;
---

<SlideLayout>
	<section class="rounded-lg flex h-full items-center justify-center p-8 bg-blue-500">
		<h1 class="text-6xl font-bold">{slide.data.title}</h1>
	</section>
</SlideLayout>
