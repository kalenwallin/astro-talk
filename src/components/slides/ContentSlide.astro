---
import { type CollectionEntry, render } from 'astro:content';
import SlideLayout from './SlideLayout.astro';

interface Props {
  slide: CollectionEntry<'slides'>;
  hideContent: boolean;
}

const { slide } = Astro.props;
const { Content } = await render(slide);
---

<div class="mb-8">
  <h1 class="m-1 mt-0 mb-2 text-5xl xl:text-8xl">{slide.data.title}</h1>
  {slide.data.subtitle && <h2 class="m-1 mt-0 mb-0 text-3xl">{slide.data.subtitle}</h2>}
</div>
<article
  class="prose prose-2xl xl:prose-p:text-5xl xl:prose-h3:text-6xl  max-w-none"
>
  <Content />
</article>
