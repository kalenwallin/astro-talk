---
import { type CollectionEntry, render } from 'astro:content';
import SlideLayout from './SlideLayout.astro';

interface Props {
  slide: CollectionEntry<'slides'>;
}

const { slide } = Astro.props;
const { Content } = await render(slide);
---

<SlideLayout>
  <div class="mb-8">
    <h1 class="text-notion-light-default-text m-1 mt-0 mb-2 text-5xl">{slide.data.title}</h1>
    {
      slide.data.subtitle && (
        <h2 class="text-notion-light-default-text m-1 mt-0 mb-0 text-3xl">{slide.data.subtitle}</h2>
      )
    }
  </div>
  <article class="prose prose-2xl max-w-none text-notion-light-default-text">
    <Content />
  </article>
</SlideLayout>
