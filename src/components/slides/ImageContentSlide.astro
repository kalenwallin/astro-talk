---
import type { CollectionEntry } from 'astro:content';

interface Props {
  slide: CollectionEntry<'slides'>;
  hideContent: boolean;
}

const { slide } = Astro.props;
const image = slide.data.image!;
const { Content } = await slide.render();
---

<section class="flex aspect-video">
  <div class="w-1/2">
    <img src={image.src} class="h-full w-full object-cover" />
  </div>
  <div class="w-1/2 p-8">
    <div class="prose prose-2xl mb-4 flex flex-col xl:prose-li:text-6xl">
      <h1 class="m-1 mt-0 mb-2 text-5xl xl:text-9xl">{slide.data.title}</h1>
      {slide.data.subtitle && <h2 class="m-1 mt-0 mb-0 w-fit text-3xl xl:text-8xl">{slide.data.subtitle}</h2>}
      <article>
        <Content />
      </article>
    </div>
  </div>
</section>
